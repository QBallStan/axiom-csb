<form class="axiom-roll-dialog">

  <div class="axiom-group-row">
    <div class="axiom-group axiom-centered">
      <label>Attribute Mod</label>
      <div class="axiom-csb-mod-input">
        <button type="button" class="mod-minus">–</button>
        <input type="number" name="attributeMod" value="{{attributeMod}}" />
        <button type="button" class="mod-plus">+</button>
      </div>
    </div>

    <div class="axiom-group axiom-centered">
      <label>Skill Mod</label>
      <div class="axiom-csb-mod-input">
        <button type="button" class="mod-minus">–</button>
        <input type="number" name="skillMod" value="{{skillMod}}" />
        <button type="button" class="mod-plus">+</button>
      </div>
    </div>

    <div class="axiom-group axiom-centered">
      <label>Focus Mod</label>
      <div class="axiom-csb-mod-input">
        <button type="button" class="mod-minus">–</button>
        <input type="number" name="focusMod" value="{{focusMod}}" />
        <button type="button" class="mod-plus">+</button>
      </div>
    </div>
  </div>

  <div class="axiom-group-row">
    <div class="axiom-group axiom-centered">
      <label>Attribute</label>
      <div class="axiom-die-frame">
        <select name="attributeDie">
          <option value="d4-2" {{#if (eq attributeDie "d4-2")}}selected{{/if}}>d4–2</option>
          <option value="d4-1" {{#if (eq attributeDie "d4-1")}}selected{{/if}}>d4–1</option>
          <option value="d4" {{#if (eq attributeDie "d4")}}selected{{/if}}>d4</option>
          <option value="d6" {{#if (eq attributeDie "d6")}}selected{{/if}}>d6</option>
          <option value="d8" {{#if (eq attributeDie "d8")}}selected{{/if}}>d8</option>
          <option value="d10" {{#if (eq attributeDie "d10")}}selected{{/if}}>d10</option>
          <option value="d12" {{#if (eq attributeDie "d12")}}selected{{/if}}>d12</option>
          <option value="d12+1" {{#if (eq attributeDie "d12+1")}}selected{{/if}}>d12+1</option>
          <option value="d12+2" {{#if (eq attributeDie "d12+2")}}selected{{/if}}>d12+2</option>
          <option value="d12+3" {{#if (eq attributeDie "d12+3")}}selected{{/if}}>d12+3</option>
        </select>
      </div>
    </div>

    <div class="axiom-group axiom-centered">
      <label>{{#if dualAttribute}}Second Attribute{{else}}Skill{{/if}}</label>
      <div class="axiom-die-frame">
        <select name="skillDie">
          <option value="d4-2" {{#if (eq skillDie "d4-2")}}selected{{/if}}>d4–2</option>
          <option value="d4-1" {{#if (eq skillDie "d4-1")}}selected{{/if}}>d4–1</option>
          <option value="d4" {{#if (eq skillDie "d4")}}selected{{/if}}>d4</option>
          <option value="d6" {{#if (eq skillDie "d6")}}selected{{/if}}>d6</option>
          <option value="d8" {{#if (eq skillDie "d8")}}selected{{/if}}>d8</option>
          <option value="d10" {{#if (eq skillDie "d10")}}selected{{/if}}>d10</option>
          <option value="d12" {{#if (eq skillDie "d12")}}selected{{/if}}>d12</option>
          <option value="d12+1" {{#if (eq skillDie "d12+1")}}selected{{/if}}>d12+1</option>
          <option value="d12+2" {{#if (eq skillDie "d12+2")}}selected{{/if}}>d12+2</option>
          <option value="d12+3" {{#if (eq skillDie "d12+3")}}selected{{/if}}>d12+3</option>
        </select>
      </div>
    </div>

    <div class="axiom-group axiom-centered">
      <label>Focus</label>
      <div class="axiom-die-frame">
        <div class="fixed-focus-display">d8</div>
      </div>
    </div>
  </div>

  <div class="axiom-group axiom-full axiom-centered">
    <label>General Mod</label>
    <div class="axiom-csb-mod-input">
      <button type="button" class="mod-minus">–</button>
      <input type="number" name="modifier" value="{{modifier}}" />
      <button type="button" class="mod-plus">+</button>
    </div>
  </div>

  <div class="axiom-group axiom-full">
    <button type="button" class="axiom-roll-button">
      <i class="fa-solid fa-dice"></i> Roll
    </button>
  </div>

</form>
